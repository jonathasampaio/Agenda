<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragment"
    android:background="@android:color/white"
    android:backgroundTintMode="multiply"
    android:focusable="false">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageView7"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_query_builder_grey600_24dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/imageView12" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageView8"

        android:layout_marginTop="20dp"
        android:src="@drawable/ic_place_grey600_24dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/textView10" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageView9"
        android:src="@drawable/ic_alarm_grey600_24dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/editText4" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageView10"
        android:src="@drawable/ic_people_grey600_24dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/textView13" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageView11"
        android:src="@drawable/ic_subject_grey600_24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/editText5" />

    <ImageView
        android:layout_width="360dp"
        android:layout_height="234dp"
        android:id="@+id/imageView12"
        android:src="@drawable/img_mapa_360dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageView13"
        android:layout_marginTop="21dp"
        android:src="@drawable/ic_close_white_24dp"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sexta, 11 de setembro"
        android:id="@+id/textView9"
        android:textSize="18dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/imageView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18:00-22:00"
        android:id="@+id/textView10"
        android:layout_below="@+id/imageView7"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="6dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="72dp"
        android:singleLine="false"
        android:textColor="#80000000"
        android:layout_below="@+id/textView10"
        android:textSize="18dp"
        android:text="Samsung Ocean Manaus, Av. Darcy Vargas, Parque 10 de Novembro, Manaus-AM, Brasil." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textColor="#80000000"
        android:linksClickable="false"
        android:nestedScrollingEnabled="false"
        android:longClickable="false"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="72dp"
        android:background="#ffffff"
        android:layout_below="@+id/textView13"
        android:text="2 convidados"
        android:textSize="18dp" />

</RelativeLayout>