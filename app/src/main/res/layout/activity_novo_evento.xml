<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragment"
    android:background="@android:color/white">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:lineSpacingExtra="16dp"
        android:textColor="#80000000"
        android:linksClickable="false"
        android:longClickable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:hint="Insira o tÃ­tulo"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageView7"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_query_builder_grey600_24dp"
        android:layout_below="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dia inteiro"
        android:id="@+id/textView9"
        android:textSize="18dp"
        android:layout_marginLeft="72dp"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="24dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seg, 07 de ago de 2015"
        android:id="@+id/textView10"
        android:layout_below="@+id/imageView7"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="24dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:30 PM"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:textSize="18dp" />

    <View
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:background="#50000000"
        android:layout_marginTop="18dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView10"
        android:layout_alignRight="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:checked="false"
        android:layout_below="@+id/editText3"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageView8"

        android:layout_marginTop="24dp"
        android:src="@drawable/ic_place_grey600_24dp"
        android:layout_below="@+id/textView13"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="20"
        android:id="@+id/editText4"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:textColor="#80000000"
        android:hint="Adicionar local"
        android:lineSpacingExtra="18dp"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView13"
        android:layout_marginLeft="72dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageView9"
        android:src="@drawable/ic_alarm_grey600_24dp"
        android:layout_below="@+id/editText4"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 minutos antes"
        android:id="@+id/textView12"
        android:textSize="18dp"
        android:layout_below="@+id/editText4"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="72dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageView10"
        android:src="@drawable/ic_people_grey600_24dp"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/imageView9"
        android:layout_alignStart="@+id/imageView9"
        android:layout_marginTop="24dp" />

    <View
        android:layout_width="290dp"
        android:layout_height="1dp"
        android:background="#50000000"
        android:id="@+id/textView15"
        android:layout_marginTop="22dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/imageView9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="20"
        android:id="@+id/editText5"
        android:textColor="#80000000"
        android:hint="Convidar pessoas"
        android:lineSpacingExtra="18dp"
        android:linksClickable="false"
        android:nestedScrollingEnabled="false"
        android:longClickable="false"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView15"
        android:layout_marginLeft="72dp" />

</RelativeLayout>